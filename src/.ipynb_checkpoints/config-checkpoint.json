{
  "tracking": {
    "tracker": "bytetrack.yaml",
    "inference": {
      "device": "cpu",
      "half_precision": false
    },
    "detection": {
      "imgsz_gpu": 640,
      "imgsz_cpu": 320,
      "conf_threshold": 0.3,
      "iou_threshold": 0.7,
      "max_det": 30
    },
    "classification_model": {
      "imgsz": 112,
      "batch_size": 32,
      "center_crop_margin": 0.15
    },
    "classification": {
      "min_confidence": 0.6
    },
    "sampling": {
      "classify_every": 10,
      "update_label_every": 50,
      "area_change_threshold": 0.4
    },
    "performance": {
      "frame_stride": 1,
      "detection_interval": 15,
      "num_threads_cpu": 24,
      "num_threads_gpu": 4,
      "prefer_onnx_cpu": true,
      "cudnn_benchmark": true
    },
    "visualization": {
      "draw_boxes": true,
      "draw_track_id": true,
      "draw_labels": true,
      "draw_confidence": true,
      "box_thickness": 2,
      "font_scale": 0.6,
      "font_thickness": 2
    },
    "output": {
      "video_codec": "mp4v",
      "timeline_mode": "duplicate",
      "save_json": true,
      "save_csv": true,
      "json_indent": 2,
      "csv_encoding": "utf-8"
    }
  }
}